{
  "cli": {
    "version": ">= 16.13.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "NODE_OPTIONS": "--max_old_space_size=4096"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "NODE_OPTIONS": "--max_old_space_size=4096"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "NODE_OPTIONS": "--max_old_space_size=4096"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
